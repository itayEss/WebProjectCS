@model WebProjectCS.Models.ConvBlogItem
@using Microsoft.AspNetCore.Http;

@{var UPriv = Html.ViewContext.HttpContext.Session.GetInt32("UserPriv");}
@{var UName = Html.ViewContext.HttpContext.Session.GetString("UserName");}
@{var UserID = Html.ViewContext.HttpContext.Session.GetInt32("UserPriv");}
@{
    ViewData["Title"] = "Create";
}

<h2>Create  Conversation</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConvName" class="control-label">Conversation Name</label>
                <input asp-for="ConvName" class="form-control" />
                <span asp-validation-for="ConvName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConvCreatorName" class="control-label">Conversation Creator Name</label>
                <input asp-for="ConvCreatorName" class="form-control" value=@UName/>
                <span asp-validation-for="ConvCreatorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="App" asp-action="Blog">Back to List</a>
</div>

